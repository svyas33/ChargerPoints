<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#E1F5FE">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="#ffffff"
        android:id="@+id/pic_image_view"
        android:layout_marginRight="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_text_view"
        tools:text="Coupon Name"
        android:textSize="24sp"
        android:layout_above="@+id/pts_text_view"
        android:layout_alignStart="@+id/pts_text_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pts_text_view"
        tools:text="points"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/pic_image_view"
        android:layout_toEndOf="@+id/pic_image_view" />

</RelativeLayout>